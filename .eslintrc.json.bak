{
  "parser": "@typescript-eslint/parser",
  "extends": ["react-app"],
  "rules": {
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": { "typescript": {} }
  }
}